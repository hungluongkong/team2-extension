{
    "name": "team-2-master-tool",
    "displayName": "Team 2 Master tool",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "extension-sidebar",
                    "title": "T2 Tools",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "extension-sidebar": [
                {
                    "id": "scriptView",
                    "name": "T2T"
                },
                {
                    "id": "extension.t2t-view2",
                    "name": "Tool block 2"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.openT2Tools",
                "title": "Open Team 2 Tools"
            }
        ]
    },
    "activationEvents": [
        "onView:extension-sidebar"
    ],
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.92.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "ts-loader": "^9.5.1",
        "ts-morph": "^23.0.0",
        "typescript": "^5.4.5",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4"
    }
}
